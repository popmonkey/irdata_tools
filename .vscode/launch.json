    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch League Safety Stats",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/league_safety_stats/",
            "args": ["${userHome}/ir.key", "${userHome}/ir.creds", "8093", "106470", "106470"],
        },    
        {
            "name": "Launch League DB",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/league_db/",
            "dlvFlags": ["--check-go-version=false"],
            "args": ["${userHome}/ir.key", "${userHome}/ir.creds", "8093"],
        },
        {
            "name": "Launch Ban Check",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/ban_check/",
            "args": ["${userHome}/ir.key", "${userHome}/ir.creds", "Ole Steinbraten", "2025-01-18", "74206920"],
        },    
        {
            "name": "Launch Race History",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/race_history/",
            // "args": ["${userHome}/ir.key", "${userHome}/ir.creds", "Andy Dixon", "2024-09-07", "71259157"],
        },    
    ]
}